<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sensair"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sensair.HistoryActivityListActivity"
            android:label="@string/title_historyactivity_list"
            android:parentActivityName="com.example.sensair.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sensair.HistoryActivityDetailActivity"
            android:label="@string/title_historyactivity_detail"
            android:parentActivityName="com.example.sensair.HistoryActivityListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sensair.HistoryActivityListActivity" />
        </activity>
        <activity
            android:name="com.example.sensair.RealTimeActivity"
            android:label="@string/title_activity_real_time"
            android:parentActivityName="com.example.sensair.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sensair.HistoryActivityListActivity" />
        </activity>
        <activity
            android:name="com.example.sensair.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName="com.example.sensair.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sensair.HistoryActivityListActivity" />
        </activity>
        <activity
            android:name="com.example.sensair.InfoActivity"
            android:parentActivityName="com.example.sensair.MainActivity" />
        <activity android:name="com.example.sensair.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>